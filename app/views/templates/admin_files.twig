{% include('common/_header.twig') %}

    <!--*************************************************************************************-->
    <div class="main"> <!-- доп.обёртка для прижатия футера -->

        {% include('common/_admin_nav.twig') %}

        <div class="content">
            <div class="wrapper wrapper-admin">

                {% include('common/_admin_info.twig') %}

                <div class="admin-control-area">
                    <div class="admin-files-header">
                        <h2>МОИ ФАЙЛЫ</h2>
                        <form action="" method="post" enctype="multipart/form-data">
                            <input type="file" class="form-control" id="inputPhoto" name="photo" accept="image/*">
                            <button type="submit" class="btn btn-submit" name="submit">Загрузить</button>
                        </form>
                    </div>

                    <table>
                        {% for file in files %}
                            <tr>
                                <td><img src="/admin/thumbs/{{ file.filename }}" alt=""></td>
                                <td>{{ file.comment }}</td>

                                <td width="250px">
                                    <a href="/admin/viewfile" data-filename='{{ file.filename }}'>Просмотр</a>
                                    <a href="/admin/commentfile" data-filename='{{ file.filename }}'>Комментарии</a>
                                    <a href="/admin/deletefile" data-filename='{{ file.filename }}'>Удалить</a>
                                </td>
                            </tr>
                        {% endfor %}

                    </table>

                </div>

            </div>
        </div>
    </div>
    <!--*************************************************************************************-->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script src="../../js/sweetalert2.min.js"></script>

    <script src="../../js/fileslist.js"></script>
    <script src="../../js/comment.js"></script>



{% include('common/_footer.twig') %}
